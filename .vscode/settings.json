{
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "javascript.validate.enable": false,
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "rust-analyzer.linkedProjects": [
    "${workspaceFolder}/packages/swc-plugin/Cargo.toml",
    "${workspaceFolder}/packages/test-parser/Cargo.toml",
    "${workspaceFolder}/packages/path-resolver/Cargo.toml",
  ],
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "files.exclude": {
    "node_modules": true,
    "**/node_modules": false,
  },
  "search.exclude": {
    "**/node_modules": true,
  }
}