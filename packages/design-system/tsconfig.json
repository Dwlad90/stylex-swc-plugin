{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "composite": false,
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
