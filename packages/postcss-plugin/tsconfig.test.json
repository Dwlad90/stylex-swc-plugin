{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "__tests__/**/*.mts"
  ]
}