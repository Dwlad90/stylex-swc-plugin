{
  "extends": "@stylexswc/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "incremental": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.test.json"
    },
    {
      "path": "./tsconfig.build.json"
    },
    {
      "path": "./tsconfig.typecheck.json"
    }
  ]
}