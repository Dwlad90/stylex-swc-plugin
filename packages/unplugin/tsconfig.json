{
  "extends": "@toss/stylexswc-typescript-config/base.json",
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "esnext",
      "DOM"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "__tests__/**/*.mts"
  ],
  "exclude": [
    "node_modules"
  ]
}